<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/report_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/main_header" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/transparent_blacksharp_btn"
        android:gravity="center"
        android:padding="15dp"
        android:visibility="gone"
        android:text="11月待激活客户" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/one_weekday_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/transparent_blacksharp_btn"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="7天" />

            <View
                android:layout_width="1.0dp"
                android:layout_height="fill_parent"
                android:background="@color/new_content_item_split_view"></View>

            <TextView
                android:id="@+id/one_weekday_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="0人" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_weekday_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/transparent_blacksharp_btn"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="14天" />

            <View
                android:layout_width="1.0dp"
                android:layout_height="fill_parent"
                android:background="@color/new_content_item_split_view"></View>
            <TextView
                android:id="@+id/two_weekday_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="0人" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/one_month_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/transparent_blacksharp_btn"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="30天" />

            <View
                android:layout_width="1.0dp"
                android:layout_height="fill_parent"
                android:background="@color/new_content_item_split_view"></View>
            <TextView
                android:id="@+id/one_month_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="0人" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_month_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/transparent_blacksharp_btn"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="2个月" />

            <View
                android:layout_width="1.0dp"
                android:layout_height="fill_parent"
                android:background="@color/new_content_item_split_view"></View>
            <TextView
                android:id="@+id/two_month_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="0人" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/three_month_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/transparent_blacksharp_btn"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="3个月" />

            <View
                android:layout_width="1.0dp"
                android:layout_height="fill_parent"
                android:background="@color/new_content_item_split_view"></View>
            <TextView
                android:id="@+id/three_month_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="0人" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/six_month_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:background="@drawable/transparent_blacksharp_btn"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="6个月" />

            <View
                android:layout_width="1.0dp"
                android:layout_height="fill_parent"
                android:background="@color/new_content_item_split_view"></View>
            <TextView
                android:id="@+id/six_month_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="0人" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>