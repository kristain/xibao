<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.drjing.xibao.common.view.tabstrip.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        app:pstsIndicatorColor="@color/selected_tab_text_color"
        app:selectedTabTextColor="@color/selected_tab_text_color"
        app:tabTextSize="@dimen/text_size_14"
        app:pstsShouldExpand="true"
        app:tabTextColor="@color/tab_text_color"
        app:pstsUnderlineHeight="0.5dp"
        app:pstsUnderlineColor="@color/psts_underline_color"
        app:pstsTabPaddingLeftRight="10dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsDividerColor="@android:color/transparent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>